---
import Layout from '@layouts/Layout.astro';
import Form from '@components/Form.astro';
---

<Layout title="Search CRoyale - Login">
	<section class="flex items-center justify-center">
        <Form server:defer>
            <div slot="fallback" class="px-5 py-10 w-80 bg-white/60 backdrop-blur rounded-xl flex flex-col gap-5 text-xl shadow-lg animate-pulse">
                <div class="h-10 bg-gray-400 rounded"></div>

                <div class="flex flex-col gap-1">
                    <div class="h-7 bg-gray-400 rounded"></div>
                    <div class="h-10 rounded border-gray-200 bg-gray-400"></div>
                    <span class="h-7"></span>
                </div>

                <div class="h-6 bg-gray-400 rounded"></div>

                <div class="px-4 py-2 text-white rounded bg-gray-400 cursor-not-allowed">
                    <p class="text-center">Cargando...</p>
                </div>
            </div>
        </Form>
    </section>
</Layout>